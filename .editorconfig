# Editor config
# http://EditorConfig.org

# This EditorConfig overrides any parent EditorConfigs
root = true

[*]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 2
trim_trailing_whitespace = true

# JavaScript-specific settings
[*.{js,ts}]
indent_style = space
indent_size = 2

[*.md]
trim_trailing_whitespace = false